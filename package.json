{
  "name": "angular-universal-seed",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "test": "ng test && ng e2e",
    "build": "npm run build:ngClient && npm run build:ngServer && npm run build:express",
    "build:ngClient": "ng build --prod --app ngClient --output-hashing=false",
    "build:ngServer": "ng build --prod --app ngServer --output-hashing=false",
    "build:express": "webpack --config webpack.config.js --progress --colors",
    "serve:client": "ng serve",
    "serve:ssr": "node dist/main",
    "start": "npm run serve:ssr",
    "build:ngClient:watch": "ng build --prod --app ngClient --output-hashing=false --watch",
    "build:ngServer:watch": "ng build --prod --app ngServer --output-hashing=false --watch",
    "build:express:watch": "webpack --config webpack.config.js --progress --colors --watch",
    "start:watch": "nodemon dist/main --ignore src/ --ignore *.json",
    "heroku-prebuild": "npm install -g @angular/cli@latest && yarn install",
    "heroku-postbuild": "npm run build && npm run start"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.0-beta.7",
    "@angular/cdk": "6.0.0-beta.4",
